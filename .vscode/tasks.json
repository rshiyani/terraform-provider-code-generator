                "terrajinja"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "group": "build",
        },
        {
            "label": "default",
            "dependsOn": [
                "move-binary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}